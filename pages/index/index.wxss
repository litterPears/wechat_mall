/**index.wxss**/
.container{
  height:auto;
}
.shopMain{
  width:100%;
  height:400rpx;
  position:relative;
  top:0;
  left:0;
  z-index:8;
}
.banner_bg{
  width:100%;
  height:271rpx;
}
.shopTop{
  width:100%;
  height:300rpx;
  position:absolute;
  top:0;
  left:0;
  z-index:9;
}
.shopSumbits{
  padding:0 24rpx;
}
.submitdom{
  height:64rpx;
  line-height:64rpx;
  margin:20rpx auto 24rpx;
  background:#fff;
  border-radius:32rpx;
  display:flex;
  justify-content:flex-start;
  align-items:center;
  font-size:23rpx;
  color:#404040;
  padding-left:24rpx;
}
.iconsub{
  width:27rpx;
  height:28rpx;
  margin-right:16rpx;
}
.subInput{
  width:300rpx;
}
.placeClass{
  color:#aaa;
  font-size:23rpx;
}
.shopfooter{
  height:auto;
  overflow:hidden;
}
.componentNav,.scrollDom{
  width:100%;
  height:auto;
  overflow:hidden;
}
.flexIconfont{
  width:80rpx;
  height:180rpx;
  position:fixed;
  bottom:15rpx;
  right:20rpx;
  z-index:12;
}
.flexdom{
  height:80rpx;
  border-radius:50%;
  background:#f00;
}
.flexShow{
  margin-bottom:20rpx;
}