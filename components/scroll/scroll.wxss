/* components/scroll/scroll.wxss */
.scrollcountenter{
  width:100%;
  height:auto;
  padding-bottom:30rpx;
  background:#f6f6f6;
}
.scrollTitle{
  width:100%;
  height:50rpx;
  line-height:50rpx;
  text-align:left;
  color:#333333;
  font-size:30rpx;
  letter-spacing:2rpx;
  padding:0 20rpx 25rpx 20rpx;
}
.scrollMain{
  padding:0 24rpx;
  height:auto;
  display:flex;
  justify-content:flex-start;
  flex-wrap:wrap;
}
.scrollMain .scrollLi:nth-child(odd){
  margin-right:14rpx;
}
.scrollLi{
  width:344rpx;
  height:auto;
  margin-bottom:14rpx;
  border-radius:16rpx;
  background:#fff;
}
.spanlis{
  width:300rpx;
  height:300rpx;
  margin:22rpx auto 20rpx;
  background:#00f;
}
.textWarp{
  padding:0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align:justify;
}
.liText1{
  height:36rpx;
  line-height:36rpx;
  font-size:26rpx;
  color:#333333;
}
.liText2{
  height:30rpx;
  line-height:30rpx;
  font-size:22rpx;
  color:#999999;
}
.payMoney{
  height:48rpx;
  line-height:48rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:0 20rpx;
  margin:22rpx auto;
}
.pays{
  font-size:28rpx;
  color:#F32525;
  display:flex;
  justify-content:flex-start;
  font-weight:600;
}
.payd{
  font-size:18rpx;
  line-height:54rpx;
}
.add{
  height:30rpx;
  line-height:30rpx;
  padding:0 20rpx;
  font-size:24rpx;
  color:#fff;
  background:#f00;
  border-radius:5rpx;
}
.addImg{
  width:48rpx;
  height:48rpx;
  text-align:center;
  line-height:48rpx;
  border-radius:50%;
  border:1rpx solid #F32525;
  display:flex;
  justify-content:center;
  align-items:center;
}
.addgoodicon{
 width:38rpx;
 height:36rpx;
 display:block;
}